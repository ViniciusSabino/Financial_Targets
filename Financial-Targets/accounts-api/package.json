{
    "name": "accounts-api",
    "version": "1.0.0",
    "description": "API for application responsible for all payments",
    "main": "index.js",
    "scripts": {
        "start": "nodenv ./dist/api/server.js",
        "dev": "nodenv -e nodemon -- --exec",
        "build": "babel ./src -d ./dist --source-maps",
        "lint": "eslint src/** --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "nodemonConfig": {
        "exec": "babel-node ./src/api/server.js"
    },
    "keywords": [
        "accounts",
        "payments",
        "financial"
    ],
    "author": "Vin√≠cius Rocha <vnc.chelsea@gmail.com>",
    "license": "ISC",
    "dependencies": {
        "chalk": "^2.4.2",
        "kcors": "^2.2.2",
        "koa": "^2.7.0",
        "koa-bodyparser": "^4.2.1",
        "koa-compose": "^4.1.0",
        "koa-joi-router": "^5.3.0",
        "koa-logger": "^3.2.0",
        "koa-respond": "^2.1.0",
        "moment": "^2.24.0",
        "mongoose": "^5.4.20"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.4.0",
        "@babel/node": "^7.2.2",
        "@babel/plugin-proposal-do-expressions": "^7.2.0",
        "@babel/plugin-proposal-optional-chaining": "^7.2.0",
        "@babel/plugin-proposal-pipeline-operator": "^7.3.2",
        "@babel/preset-env": "^7.4.2",
        "@babel/register": "^7.4.0",
        "babel-eslint": "^10.0.1",
        "dotenv": "^7.0.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-prettier": "^3.0.1",
        "husky": "^1.3.1",
        "node-env-run": "^3.0.2",
        "nodemon": "^1.18.10",
        "prettier": "^1.16.4",
        "pretty-quick": "^1.10.0"
    }
}
