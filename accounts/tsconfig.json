{
    "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "emitDeclarationOnly": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "lib": [
        "es7",
        "dom"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ]
  }
  